bindsym {
	$mod+Shift+r reload
	$mod+c kill

	$mod+Return exec runapp -- $term
	Print exec XDG_SCREENSHOTS_DIR=$grim_dir grimshot --notify save output
	Shift+Print exec grimshot --notify copy output
	Control+Print exec XDG_SCREENSHOTS_DIR=$grim_dir grimshot --notify save area
	Control+Shift+Print exec grimshot --notify copy area
	$mod+r exec runapp -- $menu
	$mod+Shift+Return exec runapp -- "$scripts_dir/wleave-show"
	XF86AudioRaiseVolume exec volumectl up
	XF86AudioLowerVolume exec volumectl down
	--no-repeat XF86AudioMute exec volumectl toggle
	XF86AudioMicMute exec volumectl toggle
	# --no-repeat $mod+Next exec "$scripts_dir/wl-screenrec-toggle"
	--no-repeat $mod+Next exec "$HOME/.local/bin/scr"
	$mod+backslash exec "$scripts_dir/wlsunset-c toggle"
	--no-repeat $mod+i exec "$scripts_dir/swww-next-rand $HOME/Pictures/wallpapers/live"
	$mod+b exec runapp -- $browser
	$mod+e exec runapp -- $filemanager

	$mod+$left focus left
	$mod+$down focus down
	$mod+$up focus up
	$mod+$right focus right
	$mod+Shift+$left move left
	$mod+Shift+$down move down
	$mod+Shift+$up move up
	$mod+Shift+$right move right

	--no-repeat $mod+1 workspace number 1
	--no-repeat $mod+2 workspace number 2
	--no-repeat $mod+3 workspace number 3
	--no-repeat $mod+4 workspace number 4
	--no-repeat $mod+5 workspace number 5
	--no-repeat $mod+6 workspace number 6
	--no-repeat $mod+7 workspace number 7
	--no-repeat $mod+8 workspace number 8
	--no-repeat $mod+9 workspace number 9
	--no-repeat $mod+0 workspace number 10
	--no-repeat $mod+Shift+1 move container to workspace number 1
	--no-repeat $mod+Shift+2 move container to workspace number 2
	--no-repeat $mod+Shift+3 move container to workspace number 3
	--no-repeat $mod+Shift+4 move container to workspace number 4
	--no-repeat $mod+Shift+5 move container to workspace number 5
	--no-repeat $mod+Shift+6 move container to workspace number 6
	--no-repeat $mod+Shift+7 move container to workspace number 7
	--no-repeat $mod+Shift+8 move container to workspace number 8
	--no-repeat $mod+Shift+9 move container to workspace number 9
	--no-repeat $mod+Shift+0 move container to workspace number 10
	# Note: workspaces can have any name you want, not just numbers.
	# We just use 1-10 as the default.

	$mod+period workspace next
	$mod+comma workspace prev
	$mod+Shift+period move container to workspace next
	$mod+Shift+comma move container to workspace prev

	$mod+n splith
	$mod+v splitv
	$mod+s layout stacking
	$mod+w layout tabbed
	$mod+q layout toggle split
	$mod+Shift+e split none
	$mod+f fullscreen
	$mod+Shift+space floating toggle
	$mod+Control+space sticky toggle
	$mod+space focus mode_toggle


	# Scratchpad:
	# Sway has a "scratchpad", which is a bag of holding for windows.
	# You can send windows there and get them back later.

	# Move the currently focused window to the scratchpad
	$mod+Shift+minus move scratchpad

	# Show the next scratchpad window or hide the focused scratchpad window.
	# If there are multiple scratchpad windows, this command cycles through them.
	$mod+minus scratchpad show

	$mod+left resize shrink width 70px
	$mod+down resize grow height 70px
	$mod+up resize shrink height 70px
	$mod+right resize grow width 70px

	$mod+z exec --no-startup-id pactl set-source-mute @DEFAULT_SOURCE@ 0
	--release $mod+z exec --no-startup-id pactl set-source-mute @DEFAULT_SOURCE@ 1
	# $mod+g exec "$HOME/.config/sway/swayca"
}

# Drag floating windows by holding down $mod and left mouse button.
# Resize them with right mouse button + $mod.
# Despite the name, also works for non-floating windows.
# Change normal to inverse to use left mouse button for resizing and right
# mouse button for dragging.
floating_modifier $mod normal
