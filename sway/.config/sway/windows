# for_window blocks
for_window {
    [title="Picture-in-Picture|Picture in picture"] dim_inactive 0, sticky enable, floating enable
    [app_id="galculator"] floating enable
    [title="Wine System Tray"] move container to scratchpad
    [app_id="lxqt-policykit-agent"] floating enable
    # [app_id="mpv"] floating enable, move position 0 ppt 0 ppt, sticky enable, dim_inactive 0.0
    [class="TerraTechLinuxx64"] floating disable, fullscreen disable
 
    # [instance="discord"] move window to scratchpad
    [window_role="pop-up"] floating enable
    [window_role="Pop-up"] floating enable
    [window_role="bubble"] floating enable
    [window_role="Bubble"] floating enable
    [window_role="dialog"] floating enable
    [window_role="Dialog"] floating enable
    [window_type="dialog"] floating enable
    [window_type="Dialog"] floating enable
    [class="dialog"] floating enable
    [class="Dialog"] floating enable
    [window_role="task_dialog"] floating enable
    [window_type="menu"] floating enable
    [window_role="About"] floating enable
    [app_id="nemo" title="^.* Properties$|^Edit Bookmarks$"] floating enable
    [class="steam" title="^Steam Settings$"] floating enable
}
 
